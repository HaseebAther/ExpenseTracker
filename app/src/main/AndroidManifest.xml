<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.Dime"
        tools:targetApi="31">
        <activity
            android:name=".pages.Mapactivity"
            android:exported="false" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="YourAPIKey" />

        <activity
            android:name=".pages.Chatbot"
            android:exported="false" /> <!-- Activities -->
        <activity
            android:name=".pages.TransactionDetails"
            android:exported="false" />
        <activity
            android:name=".pages.AllTransactionActivity"
            android:exported="false" />
        <activity
            android:name=".pages.AddExpense"
            android:exported="false" />
        <activity
            android:name=".pages.Homepage"
            android:exported="false" />
        <activity
            android:name=".pages.SignUp"
            android:exported="false" />
        <activity
            android:name=".pages.Splash"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".pages.Login"
            android:exported="false" />
        <activity
            android:name=".pages.Onboarding"
            android:exported="true" /> <!-- Meta-data for Preloaded Fonts -->
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>
